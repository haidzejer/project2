<h1 class="text-center">Challenges</h1>
<article>
  <% @posts.each do |p| %>
    <div class="post">
      <h3><%= link_to p.title, post_path(p) %> </h3>
      <h4>Created By: <%= link_to p.user.name, user_path(p.user) %> <span style="font-size: 14px; float: right;"> <%= time_ago_in_words(p.created_at) %> ago... </span></h4>
      <p><%= p.body %></p>
    </div>
  <% end %>
</article>
