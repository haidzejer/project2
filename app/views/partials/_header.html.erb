<div class="header">
  <nav class="navbar navbar-default" style="background-color: #f2f2f2; border: 0px;">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/"><h3>Challenge App</h3></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav navbar-right">
          <li><a href="/">Home</a></li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Actions <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Your Posts", user_path(current_user) %></li>
                <li><a href="#">Saved Challenges</a></li>
                <li><%= link_to "Edit User", edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Logout", logout_path, {method: "DELETE"} %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Login", new_session_path %></li>
          <% end %>

        </ul>
      </div><!-- /.navbar-collapse -->
