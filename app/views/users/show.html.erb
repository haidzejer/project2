<h1 style="text-align: center"> <%= @user.name %> </h1>
<h2>Posts:</h2>

<% @user.posts.each do |p| %>
  <div class="post">
    <h3><%= p.title %></h3>
    <h4> <%= p.user.name %> </h4>
    <h6> <%= time_ago_in_words(p.created_at) %> ago... </h6>
    <p><%= p.body %></p>
    <%= link_to 'Delete Post', p, method: :delete %>
  </div>
<% end %>

<h3>New Challenge</h3>

<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_area :body, placeholder: "Post body..." %>
  <%= f.submit %>
<% end %>
