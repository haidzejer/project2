<h1 style="text-align: center"> <%= @user.name %> </h1>
<h2>Your Posts:</h2>

<% @user.posts.each do |p| %>
  <div class="post">
    <h3><%= p.title %></h3>
    <h6> <%= time_ago_in_words(p.created_at) %> ago... </h6>
    <p><%= p.body %></p>
    <%= link_to 'Delete', p, method: :delete %>
    <%= link_to 'Edit', edit_post_path(p) %>
  </div>
<% end %>

<h3>New Challenge</h3>

<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_area :body, placeholder: "Post body..." %>
  <%= f.submit %>
<% end %>
