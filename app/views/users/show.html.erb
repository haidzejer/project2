<h1 style="text-align: center"> <%= @user.name %>'s Posts </h1>

<% @user.posts.each do |p| %>
  <div class="post">
    <h3><%= link_to p.title, post_path(p) %></h3>
    <h6 class="text-center">Created about <%= time_ago_in_words(p.created_at) %> ago... </h6>
    <p><%= p.body %></p>
    <span style="font-size: 14px;">
      <%= link_to "Delete", p, method: :delete %>
    </span>
    <span style="font-size: 14px;">
      <%= link_to 'Edit', edit_post_path(p) %>
    </span>
  </div>
<% end %>

<h3>New Challenge</h3>

<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "Title", required: true %>
  <%= f.text_area :body, placeholder: "Post body...", required: true %>
  <%= f.submit %>
<% end %>
